# Database connection URL (SQLite - no Docker required)
DATABASE_URL=file:./dev.db

# JWT secrets and expiration
JWT_ACCESS_SECRET=change-this-access-secret
JWT_REFRESH_SECRET=change-this-refresh-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3 / R2 credentials
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name

# Email/SMS providers
SENDGRID_API_KEY=your-sendgrid-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_FROM_NUMBER=+1234567890

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@propertymanager.com

# GoCardless Configuration
GOCARDLESS_ENVIRONMENT=sandbox  # or 'live' for production
GOCARDLESS_ACCESS_TOKEN=your-gocardless-access-token
GOCARDLESS_WEBHOOK_SECRET=your-gocardless-webhook-secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# TrueLayer Configuration (Open Banking)
TRUELAYER_CLIENT_ID=your-truelayer-client-id
TRUELAYER_CLIENT_SECRET=your-truelayer-client-secret

# Yapily Configuration (Open Banking)
YAPILY_ENVIRONMENT=sandbox  # or 'live' for production
YAPILY_APPLICATION_ID=your-yapily-application-id
YAPILY_APPLICATION_SECRET=your-yapily-application-secret

# Application configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Redis for BullMQ (optional - only needed if using background jobs)
REDIS_URL=redis://localhost:6379

# Refresh token cookie configuration
REFRESH_COOKIE_NAME=refresh_token
REFRESH_COOKIE_SECURE=false  # Set to true in production

# Multi-tenancy configuration
ENABLE_STRICT_TENANT_SCOPING=false  # Set to true to enable automatic tenant scoping middleware