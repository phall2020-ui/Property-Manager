# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/property_management
# For local development with SQLite: file:./dev.db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_ACCESS_SECRET=change-this-to-a-secure-random-string-in-production
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=4000
NODE_ENV=development

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Cookie Security (production)
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
# Set COOKIE_SECURE=true and COOKIE_SAMESITE=strict in production

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# AWS S3 (for document storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=property-manager-documents

# Email Service (optional)
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=noreply@example.com
SENDGRID_API_KEY=your-sendgrid-api-key

# Payment Provider (optional - for future use)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
